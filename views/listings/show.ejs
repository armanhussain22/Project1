<% layout ("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class=" col-8 offset-3">

    <h3><b> <%= listing.title %></b> </h3>
</div>
    <div class="card col-6 offset-2 offset-3 show-card listing-card">
       <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"> <br />
       <div class="card-body">
       <p class="card-text"><i>
            Owned by: <%= listing.owner ? listing.owner.username : "Unknown" %></i></p> <!--Here "?" is used  for condition which tells if listing.owner present than print owner otherwise unknown -->
            
       <p class="card-text"><%= listing.description %> <br /></p>
       <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN")%> <br />  </p> 
       <p class="card-text"> <%= listing.location %> <br /></p>
       <p class="card-text"> <%= listing.country %> </p>
        
       </div>
    </div>
    </div>


<% if (currUser && listing.owner && currUser._id.equals(listing.owner._id)) { %>
 <!--Here this condition statement is used for showing the edit and delete button on to the owner and to check is the current user and the owner is same than he can use the buttons-->
<div class="coln-1 ">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark offset-3 mt-2 edit-btn">Edit</a>
</div> <!--to over come the large space of button we will make a div and place this button or link within it so that the space of the button will be the sixe of the column -->
    <br />

    
  <div>
     <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-3">Delete</button>
    </form>
  </div> 
   <% }%>

   
  <div class="col-8 offset-3">
    <hr />
    <% if(currUser && listing.owner) {%>
    <h6>Leave a Review</h6>
    <form action ="/listings/<%= listing._id %>/reviews" method = "POST"  class="needs-validation" novalidate >

    <fieldset class="starability-slot">  <!--This is the HTML code copied form github used for rating star -->
          <legend>Rating:</legend>
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
    </fieldset>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea name="review[comment]" id="comment" cols="30" row="5" class="form-control" required></textarea>
        <div class="invalid-feedback">Please Enter you review You RicH Dick</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form> 
    <hr />
    <% } %>
    
    <% if(listing.reviews.length > 0) { %>
    <div class="row mt-2">
     <p><b>All Reviews</b></p>

       <% for(review of listing.reviews) { %>
        <div class="card-body col-4 ms-3 mb-3 border border-dark rounded-3 p-3"> <!--Here ms(mardin from start) and  border-dark rounded-3 is for the give a border and p-3(padding)-->
           <h5 class="card-title"><%= review.author ? review.author.username : "Anonymous" %></h5>

           <p class="card-text"><%= review.comment %></p>
           <p class="card-text "><%= review.rating %>stars</p>
           <p class="starability-result " data-rating="<%= review.rating %>" >Rated: 3 stars</p>
           <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
            <button class=" btn btn-sm btn-outline-dark ">Delete</button> <!--Here btn-sm(button-small) and this btn-outline-dark(button-outline-dark) are used to style the button like hover property which when hover becomes dark -->
           </form>
        </div>
       <% } %>
      </div>
      <% } %>
</div>

  


